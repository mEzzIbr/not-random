{
  "name": "نصٌ ليس عشوائيًا",
  "description": "مولد نص عربي مستخرج من آلاف القصائد والأشعار العربية",
  "version": "1.0",
  "manifest_version": 3,

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background.service_worker": {
    "persistent": false
  },
  "permissions": ["activeTab", "contextMenus", "scripting", "tabs"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  }
}
